<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
    
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
    <link href="https://fonts.googleapis.com/css?family=Press+Start+2P" rel="stylesheet">
    
  
    <title>IMDb</title>
</head>
<body>
    <header>
        <h1 class = "title">
            IMDb.
        </h1>
        <div>
            <button id='nav-button' aria-controls='navbar' aria-expanded='false'>
                <svg class="line" fill='none' viewBox="0 0 100 100" width='45'>
                    <path stroke-width='10' stroke-linecap='round' stroke-linejoin='round' 
                            d='m 20 30 h 60 a 3 3 0 0 1 0 20 h -60 a 1 1 0 0 0 0 20 h 60 a 1 1 0 0 1 -30 10 v -60'>
                    </path>
                </svg>
            </button>

            <div id="nav-menu">
                <ul>
                    <% if (username) { %>
                        <li><i class='fas fa-user-circle' style='color:#C62368'></i>  <%= username %></li>
                        <a href="#main"><li><i class='fas fa-search' style='color:#C62368'></i>  Browse</li></a>
                        <a href="#game"><li><i class='fas fa-chess' style='color:#C62368'></i>  Game</li></a>
                        <a href="/submit"><li><i class="fas fa-comment" style="color: #C62368;"></i>  Review</li></a>
                        <a href="/logout"><li><i class="fas fa-sign-out-alt" style="color: #C62368;"></i>  Logout</li></a>
                      <% } else { %>
                        <a href="#main"><li><i class='fas fa-search' style='color:#C62368'></i>  Browse</li></a>
                        <a href="#game"><li><i class='fas fa-chess' style='color:#C62368'></i>  Game</li></a>
                        <a href="/submit"><li><i class="fas fa-comment" style="color: #C62368;"></i>  Review</li></a>
                        <a href="/login"><li><i class="fas fa-sign-in-alt" style="color: #C62368;"></i>  Login</li></a>
                        <a href="/signup"><li><i class="fas fa-user-plus" style="color: #C62368;"></i> SignUp</li></a>
                      <% } %>
                    
                </ul>
            </div>

            <div class = "finch">
                <svg fill = "none" viewBox = "0 0 100  100" width = "200">
                    <path   stroke-width='2' stroke-linecap="round" stroke-linejoin="round"
                        d = "m 40 60 q 3 -10 15 -20 a 1 1 0 0 1 9 0 l 0 0.2 l 3 0 l -4 1.5 a 1 1 0 0 0 -1 1 q 1 18 -22 17 m 5 0 l 2 3 l -1 2 m 1 -2 l 1 2 m 1 -5.6 l 3.5 3 l -1 2 m 1 -2 l 0 2 m -12.1 -4.4 l -11 7 q -5 7 11 -7 l -11 10.5 l 2 0 l 9 -10.5 m 19.5 -21 q 0 0 0.1 0"></path>
                </svg>
            </div>

            <p class="search-prompt">Search :</p>
            <div class="search-bar">
                <form>
                    <input class="search-text" type="text" id="search" placeholder="Name a movie..." name="search" class="form-control">
                    <ul align="center" class="list-group" id="result"></ul>
                    <button class="search-submit" type="button"><span class="material-symbols-outlined">search</span></button>
                </form>
            </div>
        </div>
        
        <div class="divider up"></div>

    </header>
        
    <main id="main">
        <div class="divider"></div>
  
        <section class="ejs">
  
            <div class="browselist">
                <% if (details != null) { %>
                    <% details.forEach(function(item) { %>
                        <a href="<%= item.path %>">
                            <img class="movimg" src="<%= item.image %>" alt="">
                            <span class="movname"><%= item.name %></span>
                        </a>
                    <% }) %>
                <% } else { %>
                    <h1 class="title">Please login to browse</h1>
                <% } %>
            </div>
            
        </section>
  
        <div class="divider up"></div>
      </main>
 
    <footer>

        <a name="game"></a>
        <h1 id="level-title">Press A Key to Start</h1>

        <div class="container">

            <div class="row">
                <div type="button" id="green" class="btn ">
                    <img src="assets/pics/num1.jpg" alt="yellow button image">
                </div>

                <div type="button" id="red" class="btn red">
                    <img src="assets/pics/num2.jpg" alt="yellow button image">
                </div>
            </div>

            <div class="row">
                <div type="button" id="yellow" class="btn yellow">
                    <img src="assets/pics/num3.jpg" alt="yellow button image">
                </div>

                <div type="button" id="blue" class="btn blue">
                    <img src="assets/pics/num4.jpg" alt="yellow button image">
                </div>
            </div>
        </div>

        <div class="divider up"></div>
    </footer>

     

    <!-- 
    <div>
        <div class="dividerb"></div>

        <div class="results">

        </div>
        
        <div class="dividerb upb"></div>
    </div> 
    -->
    
    
    <script src="nav.js"></script>
    <script src="game.js"></script>
    <script src="search.js"></script>
    <link rel="stylesheet" href="styles.css">
</body>
</html>